---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Research">
	<section class="research">
		<h1>Research</h1>
		<div class="projects">
			<article class="project">
				<h2>ZK State Channels</h2>
				<p>Building a scalable and secure state channel protocols using zero-knowledge proofs.</p>
			</article>
		</div>
	</section>

	<style>
		.projects {
			display: grid;
			gap: 2rem;
			margin-top: 2rem;
		}

		.project {
			border: 1px solid var(--text-color);
			padding: 1.5rem;
		}
	</style>
</MainLayout>

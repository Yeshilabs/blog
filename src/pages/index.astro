---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/global.css';
---

<MainLayout title="Home">
	<section class="hero home-section">
		<h1>Advancing Privacy Through Zero Knowledge</h1>
		<p>Researching and developing scalable blockchain solutions</p>
	</section>

	<section class="mission home-section">
		<h2>Our Mission</h2>
		<p>We're dedicated to advancing blockchain scalability and privacy through zero-knowledge cryptography.</p>
	</section>

	<style>
		.home-section {
			text-align: left;
			margin: 4rem 0;
			padding-left: 1rem;
		}

		.terminal-text {
			font-family: var(--font-mono);
			animation: blink 1s step-end infinite;
		}

		@keyframes blink {
			50% { opacity: 0; }
		}

		section {
			max-width: 800px;
		}
	</style>
</MainLayout>
